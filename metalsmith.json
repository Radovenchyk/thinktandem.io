{
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "sortBy": "date",
        "reverse": true,
        "pattern": "content/articles/*.md"
      },
      "lastestArticles": {
        "sortBy": "date",
        "limit": 3,
        "reverse": true,
        "pattern": "content/articles/*.md"
      },
      "quotes": {
        "sortBy": "name",
        "pattern": "content/quotes/*.md"
      },
      "staff": {
        "sortBy": "name",
        "pattern": "content/staff/*.md"
      },
      "services": {
        "sortBy": "weight",
        "pattern": "content/services/*.md"
      }
    },
    "metalsmith-metadata-convention": {},
    "metalsmith-move-up": {
      "pattern": "content/**/*"
    },
    "metalsmith-env": {
      "variables": {
        "basePath": "/"
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-include": {},
    "metalsmith-permalinks": {
      "pattern": ":url",
      "relative": false,
      "linksets": [{
        "match": {"collection": "articles"},
        "pattern": "blog/:date/:title"
      }]
    },
    "metalsmith-pagination": {
      "collections.articles": {
        "perPage": 4,
        "layout": "pages/blog.html",
        "first": "blog/index.html",
        "path": "blog/:num/index.html",
        "pageMetadata": {
          "title": "Blog"
        }
      }
    },
    "metalsmith-tags": {
      "handle": "tags",
      "path": "topics/:tag/index.html",
      "pathPage": "topics/:tag/:num/index.html",
      "perPage": 6,
      "layout": "pages/tags.html",
      "sortBy": "date",
      "reverse": true,
      "skipMetadata": false,
      "slug": {
        "mode": "rfc3986"
      }
    },
    "metalsmith-seo-checker": {
      "trailingSlash": true,
      "canonicalBase": "http://www.thinktandem.io",
      "lengths": {
        "title": 60,
        "description": 160
      },
      "seo": {
        "title": true,
        "description": "Another great piece of content by Tandem.",
        "robots": "index, follow"
      },
      "ogp": {
        "defaultType": "website",
        "defaultImage": "www.example.org/myImage.png",
        "ignoreMissingImage": false
      }
    },
    "metalsmith-sitemap": {
      "hostname": "http://www.thinktandem.io",
      "omitIndex": true
    },
    "metalsmith-swig-helpers": {
      "filters": {
        "xorcrypt": "xor-crypt"
      }
    },
    "metalsmith-in-place": {
      "engine": "swig",
      "partials": "templates/components"
    },
    "metalsmith-layouts": {
      "engine": "swig",
      "directory": "templates"
    },
    "metalsmith-browserify": {
      "files": [
        "js/entry.js",
        "js/theme.js",
        "../assets/vendor/particles.js/particles.min.js"
      ],
      "dest": "js/scripts.js"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "nested",
      "sourceComments": false,
      "sourceMap": true,
      "includePaths": [
        "assets/vendor",
        "assets/vendor/bootstrap-sass-twbs/assets/stylesheets",
        "assets/vendor/devicons/css/",
        "assets/vendor/fontawesome/scss/",
        "templates/components/**/*"
      ]
    }
  }
}
